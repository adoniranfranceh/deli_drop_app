 <div class="devise-container">
  <div class="devise-apresentation"></div>

  <div class="devise-form">
    <h2><%= t('devise.registrations.new.title') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "restaurant_users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, t('devise.registrations.new.email_label') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <div class="label-with-hint">
          <%= f.label :password, t('devise.registrations.new.password_label') %>
          <% if @minimum_password_length %>
            <em><%= t('devise.registrations.new.password_hint', count: @minimum_password_length) %></em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation_label') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.registrations.new.submit') %>
      </div>

      <div class="devise-links">
        <%= render "restaurant_users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
