<div class="devise-container">
  <div class="devise-apresentation"></div>

  <div class="devise-form">
    <h2><%= t('devise.sessions.new.title') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, t('devise.sessions.new.email_label') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, t('devise.sessions.new.password_label') %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="devise-remember-and-links">
        <% if devise_mapping.rememberable? %>
          <div class="remember-me-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t('devise.sessions.new.remember_me_label') %>
          </div>
        <% end %>

      </div>

      <div class="actions">
        <%= f.submit t('devise.sessions.new.submit') %>
      </div>

      <div class="devise-links">
        <%= render "restaurant_users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
