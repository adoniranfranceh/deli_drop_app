<div class="devise-container">
  <div class="devise-apresentation"></div>

  <div class="devise-form">
    <h2><%= t('devise.passwords.new.title') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "restaurant_users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, t('devise.passwords.new.email_label') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.new.submit') %>
      </div>

      <div class="devise-links">
        <%= render "restaurant_users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
